@model List<Repositories.Tratamientos>

@{
    ViewBag.Title = "Index";
}

@section head{
    <link rel="stylesheet" type="text/css" href="/Contenido/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="/Contenido/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/Contenido/Css/index.css">

}

<div id="carousel-index" class="my-5">
    <div><img src="/Contenido/img/estetica1.jpg" /></div>
    <div><img src="/Contenido/img/estetica2.jpg" /></div>
    <div><img src="/Contenido/img/estetica3.jpg" /></div>

</div>

<div class="my-5" id="services">
    <h5 class="title-index">Tratamientos</h5>
    <div class="galery-cont">
        @foreach (var item in Model)
        {
            var dir = $"/Contenido/img/services/{item.Nombre}.jpg";
            <div class="service-img">
                <img src="@dir" />
                <div class="service-name">
                    <h2>@item.Nombre</h2>
                    <div class="underline"></div>
                </div>
                <p class="service-desc">@item.Descripcion</p>
            </div>
        }
    </div>
</div>
@section scripts{
    <script src="https://code.jquery.com/jquery-migrate-3.3.2.min.js"
            integrity="sha256-Ap4KLoCf1rXb52q+i3p0k2vjBsmownyBTE1EqlRiMwA="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/Contenido/slick/slick.min.js"></script>
    <script src="~/Scripts/index.js"></script>
}